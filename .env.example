# ============================================
# Production Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# ============================================

# ============================================
# Docker Compose Settings
# ============================================
FRONTEND_PORT=80
BACKEND_PORT=3001

# ============================================
# Backend Settings
# ============================================

# CORS - Frontend URL (include protocol, no trailing slash)
CORS_ORIGIN=https://your-domain.com

# Timezone
TZ=Asia/Taipei

# Cron schedule for daily analytics (default: 2:00 AM)
ANALYTICS_CRON_SCHEDULE=0 2 * * *

# ============================================
# PostgreSQL Database
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://pomodoro:your_password@your-postgres-host:5432/pomodoro_planner

# ============================================
# Zitadel Authentication
# ============================================

# Your Zitadel instance URL (no trailing slash)
ZITADEL_DOMAIN=https://zitadel.your-domain.com

# Project Resource ID from Zitadel Console
# Found in: Project Settings > Resource ID
ZITADEL_AUDIENCE=your-project-resource-id

# ============================================
# Frontend Build Arguments (for docker buildx bake)
# ============================================

# Backend API URL (include /api path)
VITE_API_BASE_URL=https://api.your-domain.com/api

# Disable mock auth for production
VITE_MOCK_AUTH=false

# Zitadel settings (same domain as backend)
VITE_ZITADEL_DOMAIN=https://zitadel.your-domain.com

# Client ID from Zitadel Console (Application > Client ID)
VITE_ZITADEL_CLIENT_ID=your-client-id

# Redirect URI after login (must match Zitadel Console settings)
VITE_ZITADEL_REDIRECT_URI=https://your-domain.com/auth/callback

# Redirect URI after logout (must match Zitadel Console settings)
VITE_ZITADEL_POST_LOGOUT_REDIRECT_URI=https://your-domain.com/
